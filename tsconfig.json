{
  "compilerOptions": {
    "target": "es2020",                                  
    "experimentalDecorators": true,                     
    "emitDecoratorMetadata": true,                       
    "noLib": false,                                      
    "module": "commonjs", 
    "moduleResolution": "node",                                                
    "baseUrl": "./src", 
    // TODO: fix paths in future. for now using simple relative paths
    // "paths": {
    //   "@app": ["app/"],
    //   "@app/*": ["app/*"],
    //   "@common": ["common/"],
    //   "@common/*": ["common/*"],
    //   "@config": ["config/"],
    //   "@config/*": ["config/*"],
    //   "@type": ["types/"],
    //   "@type/*": ["types/*"]
    // },                                                  
    "allowJs": false,                                    
    "sourceMap": true,                                  
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "useUnknownInCatchVariables": false,                 
    "skipLibCheck": true                               
  },
  "include": ["src/**/*.ts", "tests/**/*.ts" ,"env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
